# Python Path Configuration
PYTHONPATH=${PWD}

# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this

# API Keys
GOOGLE_API_KEY=your_google_api_key

# User Information
NAME_CONFIG=your_name
MOBILE_NUMBER=your_mobile_number
APP_EMAIL_ADDRESS=your_email
APP_EMAIL_PASSWORD=your_app_password  # For Gmail, use App Password

# Email Content
INTRODUCTION_TEXT="I am writing to ..."

# File Configuration
CSV_FILENAME=isb_faculty.csv
CV_FILENAME=cv.pdf

# LLM Configuration
LLM_TEMPERATURE=0.6

# Email Server Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587  # 587 for TLS, 465 for SSL

